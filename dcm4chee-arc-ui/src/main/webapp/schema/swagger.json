    "/devices/{deviceName}": {
      "get": {
        "tags": [
          "CONFIG-RS"
        ],
        "summary": "get device",
        "operationId": "getDevice",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "deviceName",
            "in": "path",
            "description": "name of device to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "device.schema.json"
            }
          },
          "404": {
            "description": "Device not found"
          },
          "default": {
            "description": "unexpected error"
          }
        }
      },
      "put": {
        "tags": [
          "CONFIG-RS"
        ],
        "summary": "create or update device",
        "operationId": "createOrUpdateDevice",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "deviceName",
            "in": "path",
            "description": "name of device to return",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "new or updated device",
            "required": true,
            "schema": {
              "$ref": "device.schema.json"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "successful operation"
          },
          "400": {
            "description": "deviceName in path does not match device name in body"
          },
          "default": {
            "description": "unexpected error"
          }
        }
      }
    },
    "/queue": {
      "get": {
        "tags": [
          "QUEUE-RS"
        ],
        "summary": "list configured queues",
        "operationId": "listQueues",
        "produces": [
